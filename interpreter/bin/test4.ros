afiseaza("\n--pentru--\n");
pentru (var i=10; i>-8; i=i-5) executa
{
	afiseaza (i, " ");
}

afiseaza("\n--cat timp--\n");
cat timp (i>=-20) executa
{
	afiseaza (i, " ");
	i--;
}

afiseaza("\n--repeta...cat timp--\n");
repeta
{
	afiseaza(i, " ");
	i=i-2;
} cat timp (i>-30);

afiseaza("\n--repeta...pana cand--\n");
repeta
{
	afiseaza(i, " ");
	i=i+5;
} pana (i>=30);

